<!DOCTYPE html>
<html>

<head>
    <title>ToDo一覧</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <h1>ToDo一覧</h1>
    <a href="/new">新規作成</a>
    <% var _priority=typeof priority !=='undefined' ? priority : '' ; %>
        <form method="get" action="/" style="margin:10px 0">
            <label>優先度フィルター:
                <select name="priority">
                    <option value="">全て</option>
                    <% for(let i=1;i<=5;i++){ %>
                        <option value="<%= i %>" <%=_priority==i ? 'selected' : '' %>><%= i %>
                        </option>
                        <% } %>
                </select>
            </label>
            <label style="margin-left:20px">期限ソート:
                <select name="sort">
                    <option value="asc" <%=typeof sort !=='undefined' && sort==='asc' ? 'selected' : '' %>>昇順</option>
                    <option value="desc" <%=typeof sort !=='undefined' && sort==='desc' ? 'selected' : '' %>>降順</option>
                </select>
            </label>
            <button type="submit">絞り込み</button>
        </form>
        <table border="1">
            <tr>
                <th>タイトル</th>
                <th>内容</th>
                <th>期限</th>
                <th>優先度</th>
                <th>操作</th>
            </tr>
            <% todos.forEach(todo=> { %>
                <tr>
                    <td>
                        <%= todo.title %>
                    </td>
                    <td>
                        <%= todo.content %>
                    </td>
                    <td>
                        <%= todo.due_date %>
                    </td>
                    <td>
                        <%= todo.priority %>
                    </td>
                    <td>
                        <a href="/edit/<%= todo.id %>">編集</a>
                        <form action="/delete/<%= todo.id %>" method="post" style="display:inline">
                            <button type="submit">削除</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </table>
</body>

</html>