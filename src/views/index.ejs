<!DOCTYPE html>
<html>

<head>
    <title>ToDo一覧</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <body class="container mt-4">
    <h1 class="mb-4">ToDo一覧</h1>
    <a href="/new" class="btn btn-primary mb-3">新規作成</a>
    <% var _priority=typeof priority !=='undefined' ? priority : '' ; %>
    <form method="get" action="/" class="row g-3 mb-4">
        <div class="col-auto">
            <label class="form-label">優先度フィルター:
                <select name="priority" class="form-select">
                    <option value="">全て</option>
                    <% for(let i=1;i<=5;i++){ %>
                        <option value="<%= i %>" <%=_priority==i ? 'selected' : '' %>><%= i %></option>
                    <% } %>
                </select>
            </label>
        </div>
        <div class="col-auto">
            <label class="form-label">期限ソート:
                <select name="sort" class="form-select">
                    <option value="asc" <%=typeof sort !=='undefined' && sort==='asc' ? 'selected' : '' %>>昇順</option>
                    <option value="desc" <%=typeof sort !=='undefined' && sort==='desc' ? 'selected' : '' %>>降順</option>
                </select>
            </label>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary">絞り込み</button>
        </div>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>タイトル</th>
                <th>内容</th>
                <th>期限</th>
                <th>優先度</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <% todos.forEach(todo=> { %>
                <tr>
                    <td><%= todo.title %></td>
                    <td><%= todo.content %></td>
                    <td><%= todo.due_date %></td>
                    <td><%= todo.priority %></td>
                    <td>
                        <a href="/edit/<%= todo.id %>" class="btn btn-sm btn-warning">編集</a>
                        <form action="/delete/<%= todo.id %>" method="post" style="display:inline">
                            <button type="submit" class="btn btn-sm btn-danger">削除</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </body>

</html>